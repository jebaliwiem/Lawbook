<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<resource-bundle>
			<base-name>br.com.lawbook.util.messages</base-name>
			<var>label</var>
		</resource-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
	</application>
	<converter>
		<converter-id>userConv</converter-id>
		<converter-class>br.com.lawbook.business.converter.UserConverter</converter-class>
	</converter>
	<converter>
		<converter-id>authConv</converter-id>
		<converter-class>br.com.lawbook.business.converter.AuthorityConverter</converter-class>
	</converter>
	<converter>
		<converter-id>profConv</converter-id>
		<converter-class>br.com.lawbook.business.converter.ProfileConverter</converter-class>
	</converter>

</faces-config>
